<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodellivedata.WithoutViewModelActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/text_number_without_vm"
        android:text="0"
        android:textSize="28sp"
        android:layout_marginHorizontal="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tambah_without_vm"
        android:text="+"
        android:layout_toRightOf="@id/text_number_without_vm"
        android:layout_centerVertical="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_kurang_without_vm"
        android:text="-"
        android:layout_toLeftOf="@id/text_number_without_vm"
        android:layout_centerVertical="true"/>
</RelativeLayout>